{
	"format_version": "1.21.90",
	"minecraft:block": {
		"description": {
			"menu_category": {
				"category": "items"
			},
			"identifier": "starry_map:diffusion.universal_diffusion"
		},
		"components": {
			// 方块含水
			"minecraft:liquid_detection": {
				"detection_rules": [
					{
						"on_liquid_touches": "no_reaction",
						"can_contain_liquid": true,
						"liquid_type": "water"
					}
				]
			},
			// 防爆与挖掘
			"minecraft:destructible_by_explosion": false,
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1
			},
			// 摩擦力
			"minecraft:friction": 0.35,
			// 方块光照
			"minecraft:light_dampening": 0,
			"minecraft:light_emission": 1,
			// 模型与纹理
			"minecraft:geometry": "geometry.block.diffusion_filling",
			"minecraft:material_instances": {
				"*": {
					"texture": "block_texture:transmit.colorful",
					"render_method": "opaque"
				},
				"frame": {
					"texture": "chiseled_copper",
					"render_method": "opaque"
				}
			},
			// 方块外形变换
			"minecraft:transformation": {
				"scale": [
					0.75,
					0.75,
					0.75
				]
			},
			// 自定义组件
			"opal:interact.diffusion_filling": {
				// 扩散机制最大填充量
				"max_number": 114514,
				/*
				 * 类型: 'all' 表示扩散到所有 6 个方向
				 *
				 * 类型: 'horizontal', 表示扩散到水平 4 个方向。
				 *
				 * 类型: 'vertical', 表示扩散到垂直 2 个方向。
				 *
				 * 其他参数 表示扩散到下方和水平 4 个方向（向下传播模式）。
				 */
				"directions": "default",
				/*
				 * 用于表示匹配这几种方块
				 *
				 * 类型: '*abc'表示启用正则表达式 匹配带有 * 后面内容的方块
				 *
				 * 类型: 'abc*'表示启用正则表达式 匹配带有 * 前面内容的方块
				 */
				"proto_blocks": [
					"minecraft:air",
					"minecraft:structure_void"
				],
				/*
				 * 表示填充为 指定id 的方块
				 *
				 * 类型 "items_in_hand" 表示填充为 手持物品
				 */
				"target_block": "items_in_hand",
				/*
				 * 表示填充时消耗的能量
				 *
				 * 类型 "create" 表示不消耗能量
				 */
				"expense": 100
			}
		}
	}
}