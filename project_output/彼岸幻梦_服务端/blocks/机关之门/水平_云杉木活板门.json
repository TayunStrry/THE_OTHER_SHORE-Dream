					"frame_3": "q.block_state('STATE:direction_3') == 0",
					"corner_0": "q.block_state('STATE:direction_1') == 0 && q.block_state('STATE:direction_3') == 0",
					"corner_1": "q.block_state('STATE:direction_1') == 0 && q.block_state('STATE:direction_2') == 0",
					"corner_2": "q.block_state('STATE:direction_0') == 0 && q.block_state('STATE:direction_2') == 0",
					"corner_3": "q.block_state('STATE:direction_0') == 0 && q.block_state('STATE:direction_3') == 0"
				}
