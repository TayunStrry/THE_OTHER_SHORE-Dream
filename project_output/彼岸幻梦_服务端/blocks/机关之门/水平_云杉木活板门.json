						"interval_range": [
							2,
							2
						]
					}
				}
			},
			{
				"condition": "q.block_state('STATE:rune_type') == 9",
				"components": {
					"minecraft:collision_box": false,
					"minecraft:selection_box": {
						"origin": [
							-8,
							9,
							-8
						],
						"size": [
