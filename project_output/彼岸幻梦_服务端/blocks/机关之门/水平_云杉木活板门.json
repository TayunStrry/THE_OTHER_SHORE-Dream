			"minecraft:geometry": {
				"identifier": "geometry.block.horizontal_gate",
				"bone_visibility": {
					"plank": "q.block_state('STATE:rune_type') == 0",
					"frame_0": "q.block_state('STATE:direction_0') == 0",
