{
	"format_version": "1.21.90",
	"minecraft:block": {
		"description": {
			"menu_category": {
				"category": "items"
			},
			"identifier": "starry_map:universal_mechanical_framework",
			"states": {
				"STATE:energy_expend": [
					-1,
					0
				],
				"STATE:energy_stage": [
					1,
					0,
					2
				],
				"STATE:switch": [
					0,
					1,
					2
				]
			}
		},
		"components": {
			// 防爆与挖掘
			"minecraft:destructible_by_explosion": false,
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1
			},
			// 摩擦力
			"minecraft:friction": 0.35,
			// 方块光照
			"minecraft:light_dampening": 0,
			"minecraft:light_emission": 1,
			// 模型与纹理
			"minecraft:geometry": "minecraft:geometry.full_block",
			"minecraft:material_instances": {
				"*": {
					"texture": "block_texture:plane_4",
					"render_method": "alpha_test"
				}
			},
			// 方块标签
			"tag:tags:realm_block.series": {},
			"tag:minecraft:is_pickaxe_item_destructible": {},
			"tag:iron_pick_diggable": {}
		},
		"permutations": [
			//* 模板: 消耗星尘力 并基于 能量消耗 状态 表达特定功能
			{
				"condition": "q.block_state('STATE:switch') == 0 && q.block_state('STATE:energy_stage') == 1",
				"components": {
					"opal:tick.energy_expend": {
						/*
						 * 星尘力的变动值
						 */
						"modify": -1,
						/*
						 * 需要修改的方块状态
						 */
						"revise": "STATE:energy_stage"
					},
					"minecraft:tick": {
						"interval_range": [
							20,
							20
						]
					}
				}
			},
			{
				"condition": "q.block_state('STATE:switch') == 0 && q.block_state('STATE:energy_stage') == 0",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "block_texture:frame_1",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('STATE:switch') == 0 && q.block_state('STATE:energy_stage') == 2",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "block_texture:frame_2",
							"render_method": "alpha_test"
						}
					}
				}
			}
		]
	}
}