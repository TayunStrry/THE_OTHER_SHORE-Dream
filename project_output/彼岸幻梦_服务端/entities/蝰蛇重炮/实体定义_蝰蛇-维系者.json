{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:viper.support",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true,
			"properties": {
				"property:facade": {
					"range": [
						0,
						3
					],
					"type": "int",
					"default": "math.random_integer(0.0, 3.0)",
					"client_sync": true
				}
			}
		},
		"component_groups": {
			// 巡逻状态
			"entity_module:patrol": {
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 10,
					"entity_types": [
						{
							"filters": {
								"any_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "starry"
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "warden"
									},
									{
										"all_of": [
											{
												"test": "is_family",
												"operator": "==",
												"subject": "other",
												"value": "monster"
											},
											{
												"test": "is_family",
												"operator": "!=",
												"subject": "other",
												"value": "abyss"
											}
										]
									}
								]
							},
							"within_default": 8
						}
					],
					"must_reach": false,
					"must_see": true
				},
				"minecraft:behavior.avoid_mob_type": {
					"priority": 9,
					"entity_types": [
						{
							"filters": {
								"test": "is_target",
								"subject": "other",
								"value": true
							},
							"max_flee": 8
						}
					]
				},
				"minecraft:behavior.hurt_by_target": {
					"priority": 12
				},
				"minecraft:on_target_acquired": {
					"event": "entity_event:attack_point",
					"target": "self"
				}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:timer": {
					"time": 1,
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				},
				"minecraft:angry": {
					"broadcast_anger": true,
					"broadcast_range": 4,
					"duration": 32,
					"broadcast_targets": [
						"viper"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				}
			},
			// 实体销毁
			"entity_module:despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"monster",
					"abyss",
					"viper"
				]
			},
			"minecraft:collision_box": {
				"width": 0.75,
				"height": 0.55
			},
			"minecraft:health": {
				"value": 100
			},
			"minecraft:scale": {
				"value": 3
			},
			"minecraft:movement": {
				"value": 0.45
			},
			"minecraft:underwater_movement": {
				"value": 0.0
			},
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:shooter": {
				"def": "minecraft:wind_charge_projectile"
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 15 : 1"
			},
			"minecraft:loot": {
				"table": "loot_tables/viper.json"
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:variable_max_auto_step": {
				"jump_prevented_value": 2.5,
				"controlled_value": 3,
				"base_value": 2.0
			},
			"minecraft:is_stackable": {},
			"minecraft:fire_immune": true,
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": true,
				"is_pushable": true
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			//事件触发器
			"minecraft:environment_sensor": {
				"triggers": [
					{
						"filters": {
							"all_of": [
								{
									"test": "has_component",
									"value": "minecraft:angry"
								},
								{
									"test": "has_tag",
									"operator": "!=",
									"value": "on_water"
								},
								{
									"test": "in_water",
									"operator": "==",
									"value": true
								}
							]
						},
						"event": "entity_event:on_water"
					}
				]
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},
			"minecraft:ageable": {
				"duration": 60,
				"grow_up": {
					"event": "entity_event:delete",
					"target": "self"
				}
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			// 行为控制
			"minecraft:navigation.generic": {
				"can_path_over_water": false,
				"is_amphibious": false,
				"avoid_water": true,
				"can_breach": false,
				"can_swim": false,
				"can_walk": true,
				"can_sink": true
			},
			"minecraft:behavior.ranged_attack": {
				"attack_interval_min": 16,
				"attack_interval_max": 24,
				"attack_radius": 16,
				"priority": 11
			},
			"minecraft:behavior.move_to_land": {
				"priority": 0,
				"search_range": 25,
				"search_height": 5,
				"goal_radius": 0.75,
				"search_count": 10
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:behavior.random_look_around": {
				"priority": 18
			},
			"minecraft:behavior.look_at_player": {
				"probability": 0.02,
				"look_distance": 3,
				"priority": 17
			},
			"minecraft:behavior.random_stroll": {
				"speed_multiplier": 1,
				"priority": 30
			},
			"minecraft:movement.generic": {},
			"minecraft:can_climb": {}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:patrol"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:viper_attack @s support"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体进入水体事件
			"entity_event:on_water": {
				"queue_command": {
					"command": [
						"particle minecraft:knockback_roar_particle ~~~",
						"particle minecraft:knockback_roar_particle ~~~",
						"particle minecraft:knockback_roar_particle ~~~",
						"tag @s add on_water"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:patrol"
					]
				}
			},
			// 实体销毁事件
			"entity_event:delete": {
				"queue_command": {
					"command": [
						"particle minecraft:knockback_roar_particle ~~~"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:despawn"
					]
				}
			}
		}
	}
}