{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:viper.sentinel",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": false,
			"properties": {
				"property:facade": {
					"range": [
						0,
						3
					],
					"type": "int",
					"default": "math.random_integer(0.0, 3.0)",
					"client_sync": true
				}
			}
		},
		"component_groups": {
			// 签订契约之前
			"entity_module:contract_before": {
				"minecraft:despawn": {
					"despawn_from_distance": {}
				}
			},
			// 签订契约之后
			"entity_module:contract_after": {
				"minecraft:behavior.owner_hurt_by_target": {
					"priority": 7
				},
				"minecraft:behavior.owner_hurt_target": {
					"priority": 8
				},
				"minecraft:interact": {
					"interactions": [
						{
							"on_interact": {
								"filters": {
									"all_of": [
										{
											"test": "is_sneaking",
											"subject": "player",
											"operator": "=="
										},
										{
											"test": "is_owner",
											"subject": "other",
											"value": true
										}
									]
								},
								"event": "entity_event:recycling",
								"target": "self"
							},
							"interact_text": "回收 < 森蚺哨兵炮 >",
							"play_sounds": "armor.equip_diamond",
							"use_item": false,
							"cooldown": 1
						}
					]
				},
				"minecraft:on_death": {
					"event": "entity_event:death",
					"target": "self"
				},
				"minecraft:is_tamed": {}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:timer": {
					"time": 1,
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				},
				"minecraft:angry": {
					"broadcast_anger": true,
					"broadcast_range": 4,
					"duration": 32,
					"broadcast_targets": [
						"starry",
						"python"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"cannon",
					"starry",
					"python"
				]
			},
			"minecraft:collision_box": {
				"width": 0.75,
				"height": 0.55
			},
			"minecraft:health": {
				"value": 300
			},
			"minecraft:scale": {
				"value": 3
			},
			"minecraft:movement": {
				"value": 0.0
			},
			"minecraft:underwater_movement": {
				"value": 0.0
			},
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:shooter": {
				"def": "minecraft:wind_charge_projectile"
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:is_stackable": {},
			"minecraft:fire_immune": true,
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": false,
				"is_pushable": false
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			//"minecraft:body_rotation_blocked": {},
			"minecraft:body_rotation_axis_aligned": {},
			//事件触发器
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"on_damage": {
							"filters": {
								"any_of": [
									{
										"test": "is_family",
										"subject": "damager",
										"value": "player"
									},
									{
										"test": "is_family",
										"subject": "damager",
										"value": "starry"
									}
								]
							}
						},
						"deals_damage": false
					},
					{
						"cause": "fall",
						"deals_damage": false
					},
					{
						"cause": "projectile",
						"deals_damage": true
					}
				]
			},
			"minecraft:tameable": {
				"probability": 1,
				"tame_items": [
					"starry_map:faerie_contract",
					"starry_map:eternal_energy",
					"minecraft:pumpkin_pie"
				],
				"tame_event": {
					"event": "entity_event:create_contract_before",
					"target": "self"
				}
			},
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			// 行为控制
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 10,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "abyss"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "monster"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "warden"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "hoglin"
								}
							]
						},
						"within_default": 64
					}
				],
				"must_reach": false,
				"must_see": true
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:behavior.ranged_attack": {
				"attack_interval_min": 16,
				"attack_interval_max": 32,
				"attack_radius": 16,
				"priority": 11
			},
			"minecraft:behavior.random_look_around": {
				"priority": 18
			},
			"minecraft:behavior.look_at_player": {
				"probability": 0.02,
				"look_distance": 3,
				"priority": 17
			},
			"minecraft:navigation.generic": {
				"can_path_over_water": false,
				"is_amphibious": false,
				"avoid_water": true,
				"can_breach": false,
				"can_swim": false,
				"can_walk": true,
				"can_sink": true
			},
			"minecraft:movement.generic": {},
			"minecraft:can_climb": {}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:contract_before"
					]
				}
			},
			// 实体死亡事件
			"entity_event:death": {
				"queue_command": {
					"command": [
						"opal:entity_death_preservation @s"
					]
				}
			},
			// 实体契约事件
			"entity_event:create_contract_before": {
				"queue_command": {
					"command": [
						"opal:entity_contract_rite",
						"tag @s add is_tamed"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:contract_after"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:contract_before"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"sequence": [
					{
						"filters": {
							"all_of": [
								{
									"test": "has_component",
									"value": "minecraft:is_tamed",
									"subject": "target",
									"operator": "!="
								}
							]
						},
						"queue_command": {
							"command": [
								"opal:viper_attack @s starry_family"
							]
						},
						"add": {
							"component_groups": [
								"entity_module:angry_after"
							]
						}
					}
				]
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:viper_attack @s starry_family"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体回收事件
			"entity_event:recycling": {
				"queue_command": {
					"command": [
						"opal:unload_package_inventory @s starry_map:call_python_sentinel",
						"particle constant:fireworks_fireball_rune_orange ~~~",
						"particle constant:fireworks_paper_rune_orange ~~~"
					]
				}
			}
		}
	}
}