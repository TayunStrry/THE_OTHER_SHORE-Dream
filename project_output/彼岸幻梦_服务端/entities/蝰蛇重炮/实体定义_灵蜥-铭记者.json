{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:viper.spirit_lizard",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true
		},
		"component_groups": {
			// 签订契约之前
			"entity_module:contract_before": {
				"minecraft:despawn": {
					"despawn_from_distance": {}
				}
			},
			// 签订契约之后
			"entity_module:contract_after": {
				"minecraft:behavior.owner_hurt_by_target": {
					"priority": 7
				},
				"minecraft:behavior.owner_hurt_target": {
					"priority": 8
				},
				"minecraft:behavior.harvest_farm_block": {
					"search_cooldown_max_seconds": 2,
					"search_height": 3,
					"search_range": 32,
					"search_count": 0,
					"priority": 4
				},
				"minecraft:behavior.fertilize_farm_block": {
					"search_cooldown_max_seconds": 2,
					"priority": 3
				},
				"minecraft:break_blocks": {
					"breakable_blocks": [
						"minecraft:sweet_berry_bush",
						"minecraft:melon_block",
						"minecraft:pumpkin"
					]
				},
				"minecraft:behavior.follow_caravan": {
					"speed_multiplier": 1.5,
					"entity_count": 16,
					"priority": 5,
					"entity_types": {
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "starry"
						},
						"max_dist": 64
					}
				},
				"minecraft:leashable": {
					"soft_distance": 5,
					"max_distance": 15,
					"hard_distance": 10,
					"on_leash": {
						"event": "minecraft:on_leash",
						"target": "self"
					},
					"on_unleash": {
						"event": "minecraft:on_unleash",
						"target": "self"
					}
				},
				"minecraft:on_death": {
					"event": "entity_event:death",
					"target": "self"
				},
				"minecraft:is_tamed": {}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:timer": {
					"time": 1,
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				},
				"minecraft:angry": {
					"broadcast_anger": true,
					"broadcast_range": 4,
					"duration": 32,
					"broadcast_targets": [
						"viper"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"starry",
					"viper"
				]
			},
			"minecraft:collision_box": {
				"width": 0.70,
				"height": 0.55
			},
			"minecraft:health": {
				"value": 100
			},
			"minecraft:scale": {
				"value": 2.0
			},
			"minecraft:movement": {
				"value": 0.45
			},
			"minecraft:underwater_movement": {
				"value": 0.0
			},
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:shooter": {
				"def": "minecraft:wind_charge_projectile"
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 15 : 1"
			},
			"minecraft:loot": {
				"table": "loot_tables/spirit_lizard.json"
			},
			"minecraft:inventory": {
				"container_type": "inventory",
				"can_be_siphoned_from": true,
				"restrict_to_owner": true,
				"inventory_size": 27,
				"private": false
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:variable_max_auto_step": {
				"jump_prevented_value": 2.5,
				"controlled_value": 3,
				"base_value": 2.0
			},
			"minecraft:shareables": {
				"singular_pickup": true,
				"all_items": true,
				"items": [
					{
						"item": "minecraft:golden_apple"
					}
				]
			},
			"minecraft:is_stackable": {},
			"minecraft:fire_immune": true,
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": true,
				"is_pushable": true
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			//事件触发器
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},
			"minecraft:tameable": {
				"probability": 1,
				"tame_items": [
					"minecraft:enchanted_golden_apple",
					"starry_map:eternal_energy"
				],
				"tame_event": {
					"event": "entity_event:create_contract_before",
					"target": "self"
				}
			},
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			// 行为控制
			"minecraft:navigation.generic": {
				"can_path_over_water": false,
				"is_amphibious": false,
				"avoid_water": true,
				"can_breach": false,
				"can_swim": false,
				"can_walk": true,
				"can_sink": true
			},
			"minecraft:behavior.tempt": {
				"speed_multiplier": 1,
				"priority": 1,
				"items": [
					"minecraft:enchanted_golden_apple",
					"starry_map:eternal_energy"
				]
			},
			"minecraft:behavior.pickup_items": {
				"can_pickup_to_hand_or_equipment": false,
				"pickup_based_on_chance": false,
				"can_pickup_any_item": true,
				"speed_multiplier": 0.75,
				"track_target": true,
				"goal_radius": 1.45,
				"priority": 6,
				"max_dist": 9
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 10,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"operator": "==",
							"subject": "other",
							"value": "monster"
						},
						"within_default": 32
					}
				],
				"must_reach": false,
				"must_see": true
			},
			"minecraft:behavior.avoid_mob_type": {
				"priority": 9,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "abyss"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								}
							]
						},
						"max_flee": 8
					}
				]
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:behavior.ranged_attack": {
				"attack_interval_min": 64,
				"attack_interval_max": 72,
				"attack_radius": 16,
				"priority": 11
			},
			"minecraft:behavior.move_to_land": {
				"priority": 0,
				"search_range": 25,
				"search_height": 5,
				"goal_radius": 0.75,
				"search_count": 10
			},
			"minecraft:behavior.random_look_around": {
				"priority": 18
			},
			"minecraft:behavior.look_at_player": {
				"probability": 0.02,
				"look_distance": 3,
				"priority": 17
			},
			"minecraft:behavior.random_stroll": {
				"speed_multiplier": 1,
				"priority": 30
			},
			"minecraft:movement.generic": {},
			"minecraft:can_climb": {}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:contract_before"
					]
				}
			},
			// 实体契约事件
			"entity_event:create_contract_before": {
				"queue_command": {
					"command": [
						"opal:entity_contract_rite"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:contract_after"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:contract_before"
					]
				}
			},
			// 实体死亡事件
			"entity_event:death": {
				"queue_command": {
					"command": [
						"opal:entity_death_preservation @s"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:viper_attack @s starry_family"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			}
		}
	}
}