{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:elves.fish_of_pearl",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			// 实体销毁
			"entity_module:despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"in_pearl",
					"spirit"
				]
			},
			"minecraft:health": {
				"value": 10
			},
			"minecraft:scale": {
				"value": 0.5
			},
			"minecraft:attack": {
				"damage": {
					"range_min": 1,
					"range_max": 2
				}
			},
			"minecraft:flying_speed": {
				"value": 0.3
			},
			"minecraft:underwater_movement": {
				"value": 0.4
			},
			"minecraft:ageable": {
				"duration": 8,
				"grow_up": {
					"event": "entity_event:delete",
					"target": "self"
				}
			},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 0.5
			},
			"minecraft:breathable": {
				"totalSupply": 10,
				"suffocateTime": 0,
				"breathes_air": true,
				"breathes_lava": true,
				"breathes_water": true,
				"breathes_solids": true
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"deals_damage": false
					}
				]
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:navigation.hover": {
				"can_path_from_air": true,
				"is_amphibious": true,
				"can_swim": true,
				"can_sink": true
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 0,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "abyss"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "monster"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "warden"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "hoglin"
								}
							]
						},
						"within_default": 32
					}
				],
				"must_reach": true,
				"must_see": false
			},
			"minecraft:behavior.melee_attack": {
				"priority": 1,
				"attack_once": false,
				"track_target": true,
				"speed_multiplier": 1.4,
				"on_attack": {
					"event": "entity_event:attack_execute",
					"target": "self"
				}
			},
			"minecraft:behavior.random_hover": {
				"priority": 5,
				"xz_dist": 8,
				"y_dist": 16,
				"y_offset": -1,
				"interval": 1,
				"hover_height": [
					0,
					1
				]
			},
			"minecraft:behavior.float": {
				"priority": 10
			},
			"minecraft:physics": {
				"push_towards_closest_space":true,
				"has_collision": true,
				"has_gravity": false
			},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			},
			"minecraft:movement.hover": {},
			"minecraft:fire_immune": true,
			"minecraft:can_fly": {}
		},
		"events": {
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:divine_favor_attack @s fish_of_pearl"
					]
				}
			},
			// 实体销毁事件
			"entity_event:delete": {
				"add": {
					"component_groups": [
						"entity_module:despawn"
					]
				}
			}
		}
	}
}