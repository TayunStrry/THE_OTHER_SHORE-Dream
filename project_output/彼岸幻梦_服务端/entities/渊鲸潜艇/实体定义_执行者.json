{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:abyss_whale.execute",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true
		},
		"component_groups": {
			// 巡逻状态
			"entity_module:patrol": {
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 10,
					"entity_types": [
						{
							"filters": {
								"any_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "starry"
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "warden"
									},
									{
										"all_of": [
											{
												"test": "is_family",
												"operator": "==",
												"subject": "other",
												"value": "monster"
											},
											{
												"test": "is_family",
												"operator": "!=",
												"subject": "other",
												"value": "abyss"
											}
										]
									}
								]
							},
							"within_default": 32
						}
					],
					"must_reach": false,
					"must_see": true
				},
				"minecraft:on_target_acquired": {
					"event": "entity_event:attack_point",
					"target": "self"
				}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:angry": {
					"duration": 32,
					"broadcast_anger": true,
					"broadcast_range": 24,
					"broadcast_targets": [
						"whale"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				},
				"minecraft:timer": {
					"time": 2,
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"submarine",
					"monster",
					"abyss",
					"whale"
				]
			},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 0.5
			},
			"minecraft:health": {
				"value": 100
			},
			"minecraft:scale": {
				"value": 3
			},
			"minecraft:movement": {
				"value": 0.05
			},
			"minecraft:underwater_movement": {
				"value": 0.35
			},
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 15 : 1"
			},
			"minecraft:loot": {
				"table": "loot_tables/whale/routine.json"
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:is_stackable": {},
			"minecraft:fire_immune": true,
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": true,
				"is_pushable": true
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			// 事件触发器
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},
			"minecraft:despawn": {
				"despawn_from_distance": {
					"min_distance": 64
				}
			},
			// 行为控制
			"minecraft:behavior.random_swim": {
				"avoid_surface": true,
				"priority": 30
			},
			"minecraft:behavior.swim_wander": {
				"priority": 25
			},
			"minecraft:behavior.swim_idle": {
				"priority": 35
			},
			"minecraft:navigation.generic": {
				"can_path_over_water": true,
				"is_amphibious": true,
				"can_breach": false,
				"can_walk": false,
				"can_sink": false,
				"can_swim": true
			},
			"minecraft:movement.generic": {
				"max_turn": 1
			}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:patrol"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:abyss_whale_attack @s execute"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			}
		}
	}
}