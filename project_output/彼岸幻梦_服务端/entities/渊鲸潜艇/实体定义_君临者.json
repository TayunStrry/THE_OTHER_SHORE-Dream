{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:abyss_whale.emperor",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true,
			"scripts": {
				"animate": [
					"control"
				]
			},
			"animations": {
				"control": "controller.animation.server.apply_traction_to_target"
			},
			"properties": {
				"property:in_the_water": {
					"type": "bool",
					"client_sync": false,
					"default": true
				}
			}
		},
		"component_groups": {
			// 潜艇模式
			"entity_module:submarine": {
				"minecraft:behavior.random_swim": {
					"avoid_surface": true,
					"priority": 30
				},
				"minecraft:behavior.swim_wander": {
					"priority": 25
				},
				"minecraft:behavior.swim_idle": {
					"priority": 35
				},
				"minecraft:navigation.generic": {
					"can_path_over_water": true,
					"is_amphibious": true,
					"can_breach": false,
					"can_walk": false,
					"can_sink": false,
					"can_swim": true
				},
				"minecraft:behavior.delayed_attack": {
					// 设置行为的优先级, 数字越小优先级越高
					"priority": 1,
					// 调整攻击范围的乘数, 增加攻击距离
					"reach_multiplier": 2.0,
					// 攻击动作的持续时间, 单位为秒
					"attack_duration": 1.5,
					// 攻击命中目标的延迟百分比, 影响攻击节奏
					"hit_delay_pct": 0.35,
					// 是否在攻击时持续追踪目标
					"track_target": true,
					// 发起攻击时播放的声音事件
					"sound_event": "attack",
					// 头部向上旋转的最大角度, 限制攻击时头部的旋转范围
					"y_max_head_rotation": 45
				},
				"minecraft:buoyant": {
					"base_buoyancy": 0.9,
					"apply_gravity": true,
					"simulate_waves": true,
					"liquid_blocks": [
						"minecraft:water",
						"minecraft:flowing_water"
					]
				},
				"minecraft:movement.generic": {}
			},
			// 飞艇模式
			"entity_module:airship": {
				"minecraft:behavior.random_hover": {
					"priority": 30,
					"xz_dist": 8,
					"y_dist": 16,
					"y_offset": -1,
					"interval": 1,
					"hover_height": [
						8,
						16
					]
				},
				"minecraft:behavior.float": {
					"priority": 25
				},
				"minecraft:navigation.hover": {
					"can_path_from_air": true,
					"is_amphibious": true,
					"can_swim": true,
					"can_sink": true
				},
				"minecraft:behavior.ocelotattack": {
					"priority": 11,
					"cooldown_time": 0.2,
					"max_distance": 16,
					"max_sprint_range": 8,
					"max_sneak_range": 14,
					"reach_multiplier": 2,
					"sneak_speed_multiplier": 0.75,
					"sprint_speed_multiplier": 1.35,
					"walk_speed_multiplier": 1.0,
					"y_max_head_rotation": 45,
					"x_max_rotation": 45
				},
				"minecraft:movement.hover": {},
				"minecraft:can_fly": {}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:angry": {
					"duration": 32,
					"broadcast_anger": true,
					"broadcast_range": 24,
					"broadcast_targets": [
						"whale"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				},
				"minecraft:ageable": {
					"duration": 2,
					"grow_up": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"submarine",
					"monster",
					"abyss",
					"whale"
				]
			},
			"minecraft:collision_box": {
				"width": 0.75,
				"height": 0.5
			},
			"minecraft:health": {
				"value": 1000000
			},
			"minecraft:scale": {
				"value": 6
			},
			"minecraft:movement": {
				"value": 0.35
			},
			"minecraft:flying_speed": {
				"value": 0.35
			},
			"minecraft:underwater_movement": {
				"value": 0.35
			},
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:attack": {
				"damage": {
					"range_min": 15,
					"range_max": 75
				},
				"effect_name": "fatal_poison",
				"effect_duration": 64
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 64 : 16"
			},
			"minecraft:loot": {
				"table": "loot_tables/whale/emperor.json"
			},
			"minecraft:tick_world": {
				"distance_to_players": 128,
				"never_despawn": true,
				"radius": 2
			},
			"minecraft:boss": {
				"name": "entity.starry_map:abyss_whale.emperor.name",
				"hud_range": 256
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:is_stackable": {},
			"minecraft:fire_immune": true,
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": true,
				"is_pushable": true
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			// 事件触发器
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"damage_multiplier": 0.0001
					}
				]
			},
			"minecraft:environment_sensor": {
				"triggers": [
					{
						"filters": {
							"all_of": [
								{
									"test": "bool_property",
									"domain": "property:in_the_water",
									"value": false
								},
								{
									"test": "in_water",
									"operator": "==",
									"value": true
								}
							]
						},
						"event": "entity_event:on_water"
					},
					{
						"filters": {
							"all_of": [
								{
									"test": "bool_property",
									"domain": "property:in_the_water",
									"value": true
								},
								{
									"test": "in_water",
									"operator": "!=",
									"value": true
								}
							]
						},
						"event": "entity_event:on_ground"
					}
				]
			},
			"minecraft:despawn": {
				"despawn_from_distance": {
					"min_distance": 64
				}
			},
			// 行为控制
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 1,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "starry"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "warden"
								},
								{
									"all_of": [
										{
											"test": "is_family",
											"operator": "==",
											"subject": "other",
											"value": "monster"
										},
										{
											"test": "is_family",
											"operator": "!=",
											"subject": "other",
											"value": "abyss"
										}
									]
								}
							]
						},
						"within_default": 128
					}
				],
				"must_reach": false,
				"must_see": true
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:behavior.avoid_mob_type": {
				"priority": 9,
				"entity_types": [
					{
						"filters": {
							"test": "is_target",
							"subject": "other",
							"value": true
						},
						"max_flee": 8
					}
				]
			},
			// 带宽优化
			"minecraft:conditional_bandwidth_optimization": {
				"conditional_values": {
					"max_dropped_ticks": 20,
					"max_optimized_distance": 200,
					"use_motion_prediction_hints": true
				},
				"default_values": {
					"max_dropped_ticks": 10,
					"max_optimized_distance": 100,
					"use_motion_prediction_hints": true
				}
			}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:submarine"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:abyss_whale_attack @s emperor"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体进入水体事件
			"entity_event:on_water": {
				"set_property": {
					"property:in_the_water": true
				},
				"add": {
					"component_groups": [
						"entity_module:submarine"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:airship"
					]
				}
			},
			// 实体离开水体事件
			"entity_event:on_ground": {
				"set_property": {
					"property:in_the_water": false
				},
				"add": {
					"component_groups": [
						"entity_module:airship"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:submarine"
					]
				}
			},
			// 强制回归事件
			"entity_event:apply_traction_to_target": {
				"sequence": [
					{
						"filters": {
							"test": "distance_to_nearest_player",
							"operator": ">=",
							"value": 48
						},
						"queue_command": {
							"command": [
								"opal:apply_traction_to_target @r"
							]
						}
					}
				]
			}
		}
	}
}