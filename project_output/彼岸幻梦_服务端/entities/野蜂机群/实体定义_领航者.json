{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:wild_bee.guide",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true
		},
		"component_groups": {
			// 发动攻击后
			"entity_module:angry_after": {
				// 事件触发器
				"minecraft:angry": {
					"broadcast_anger": true,
					"broadcast_range": 24,
					"duration": 32,
					"broadcast_targets": [
						"wasp"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				},
				"minecraft:timer": {
					"looping": true,
					"time": [
						4,
						8
					],
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					},
					"randomInterval": true
				}
			},
			// 淡化退场
			"entity_module:downplay": {
				"minecraft:flying_speed": {
					"value": 0.0
				},
				"minecraft:scale_by_age": {
					"start_scale": 1.5,
					"end_scale": 0
				},
				"minecraft:damage_sensor": {
					"triggers": [
						{
							"cause": "all",
							"deals_damage": false
						}
					]
				},
				"minecraft:ageable": {
					"duration": 1,
					"grow_up": {
						"event": "entity_event:delete",
						"target": "self"
					}
				}
			},
			// 实体销毁
			"entity_module:despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				},
				"minecraft:scale": {
					"value": 0
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"monster",
					"flyer",
					"abyss",
					"wasp"
				]
			},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 0.5
			},
			"minecraft:health": {
				"value": 100
			},
			"minecraft:flying_speed": {
				"value": 0.35
			},
			"minecraft:underwater_movement": {
				"value": 0.35
			},
			"minecraft:scale": {
				"value": 4
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 75 : 15"
			},
			"minecraft:loot": {
				"table": "loot_tables/wasp/emperor.json"
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:can_fly": {},
			"minecraft:fire_immune": true,
			"minecraft:movement.hover": {},
			"minecraft:body_rotation_blocked": {},
			"minecraft:body_rotation_axis_aligned": {},
			// 事件触发器
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			"minecraft:ageable": {
				"duration": 35,
				"grow_up": {
					"event": "entity_event:downplay",
					"target": "self"
				}
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"damage_multiplier": 0.001
					}
				]
			},
			"minecraft:spawn_entity": {
				"entities": [
					{
						"spawn_entity": "starry_map:wild_bee.emperor",
						"spawn_event": "minecraft:entity_spawned",
						"max_wait_time": 30,
						"min_wait_time": 5,
						"should_leash": false,
						"single_use": true,
						"num_to_spawn": 1
					},
					{
						"spawn_entity": "starry_map:wild_bee.detection",
						"spawn_event": "minecraft:entity_spawned",
						"max_wait_time": 30,
						"min_wait_time": 5,
						"should_leash": false,
						"single_use": true,
						"num_to_spawn": 3
					},
					{
						"spawn_entity": "starry_map:wild_bee.support",
						"spawn_event": "minecraft:entity_spawned",
						"max_wait_time": 30,
						"min_wait_time": 5,
						"should_leash": false,
						"single_use": true,
						"num_to_spawn": 3
					},
					{
						"spawn_entity": "starry_map:wild_bee.detection",
						"spawn_event": "minecraft:entity_spawned",
						"max_wait_time": 30,
						"min_wait_time": 5,
						"should_leash": false,
						"single_use": true,
						"num_to_spawn": 3
					},
					{
						"spawn_entity": "starry_map:viper.support",
						"spawn_event": "minecraft:entity_spawned",
						"max_wait_time": 30,
						"min_wait_time": 5,
						"should_leash": false,
						"single_use": true,
						"num_to_spawn": 3
					}
				]
			},
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": false,
				"is_pushable": false
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": false
			},
			// 行为控制
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 10,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "starry"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "warden"
								},
								{
									"all_of": [
										{
											"test": "is_family",
											"operator": "==",
											"subject": "other",
											"value": "monster"
										},
										{
											"test": "is_family",
											"operator": "!=",
											"subject": "other",
											"value": "abyss"
										}
									]
								}
							]
						},
						"within_default": 32
					}
				],
				"must_reach": true,
				"must_see": true
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:behavior.random_hover": {
				"priority": 30,
				"xz_dist": 8,
				"y_dist": 16,
				"y_offset": -1,
				"interval": 1,
				"hover_height": [
					4,
					8
				]
			},
			"minecraft:behavior.follow_mob": {
				"priority": 0,
				"filters": {
					"test": "is_family",
					"subject": "other",
					"value": "wild_bee.emperor"
				},
				"speed_multiplier": 1,
				"stop_distance": 5,
				"search_range": 32
			},
			"minecraft:behavior.float": {
				"priority": 25
			},
			"minecraft:navigation.hover": {
				"can_path_from_air": true,
				"is_amphibious": false,
				"can_swim": true,
				"can_sink": true
			}
		},
		"events": {
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"queue_command": {
					"command": [
						"opal:wild_bee_attack @s detection"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:wild_bee_attack @s detection"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体淡化退场事件
			"entity_event:downplay": {
				"queue_command": {
					"command": [
						"opal:wild_bee_attack @s guide"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:downplay"
					]
				}
			},
			// 实体销毁事件
			"entity_event:delete": {
				"queue_command": {
					"command": [
						"particle minecraft:knockback_roar_particle ~~~"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:despawn"
					]
				}
			}
		}
	}
}