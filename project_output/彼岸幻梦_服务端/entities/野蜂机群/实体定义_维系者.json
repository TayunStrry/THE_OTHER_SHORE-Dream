{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:wild_bee.support",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true,
			"scripts": {
				"animate": [
					"flying"
				]
			},
			"animations": {
				"flying": "controller.animation.server.apply_dynamic_flight_to_entity",
				"timer_0": "animation.server.second_timed_animation_1.5",
				"timer_1": "animation.server.second_timed_animation_1.5"
			}
		},
		"component_groups": {
			// 巡逻状态
			"entity_module:patrol": {
				"minecraft:behavior.follow_mob": {
					"priority": 0,
					"filters": {
						"test": "is_family",
						"subject": "other",
						"value": "wild_bee.emperor"
					},
					"speed_multiplier": 1,
					"stop_distance": 5,
					"search_range": 32
				},
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 10,
					"entity_types": [
						{
							"filters": {
								"any_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "starry"
									},
									{
										"test": "is_family",
										"subject": "other",
										"value": "warden"
									},
									{
										"all_of": [
											{
												"test": "is_family",
												"operator": "==",
												"subject": "other",
												"value": "monster"
											},
											{
												"test": "is_family",
												"operator": "!=",
												"subject": "other",
												"value": "abyss"
											}
										]
									}
								]
							},
							"within_default": 16
						}
					],
					"must_reach": true,
					"must_see": true
				},
				"minecraft:behavior.random_hover": {
					"priority": 30,
					"xz_dist": 8,
					"y_dist": 16,
					"y_offset": -1,
					"interval": 1,
					"hover_height": [
						8,
						16
					]
				},
				"minecraft:behavior.float": {
					"priority": 25
				},
				"minecraft:ageable": {
					"duration": 35,
					"grow_up": {
						"event": "entity_event:downplay",
						"target": "self"
					}
				},
				"minecraft:movement.hover": {},
				"minecraft:can_fly": {}
			},
			// 契约并驾驶实体
			"entity_module:controlled": {
				// 行为控制
				"minecraft:behavior.controlled_by_player": {
					"priority": 0
				},
				"minecraft:behavior.owner_hurt_by_target": {
					"priority": 7
				},
				"minecraft:behavior.owner_hurt_target": {
					"priority": 8
				},
				"minecraft:behavior.player_ride_tamed": {},
				// 基础参数
				"minecraft:horse.jump_strength": {
					"value": {
						"range_min": 2.0,
						"range_max": 4.0
					}
				},
				"minecraft:type_family": {
					"family": [
						"flyer",
						"wasp"
					]
				},
				"minecraft:flying_speed": {
					"value": 0.01
				},
				"minecraft:physics": {
					"push_towards_closest_space": true,
					"has_collision": true,
					"has_gravity": true
				},
				"minecraft:rideable": {
					"crouching_skip_interact": true,
					"seat_count": 1,
					"family_types": [
						"player"
					],
					"pull_in_entities": true,
					"seats": [
						{
							"position": [
								0.0,
								0.65,
								0.0
							],
							"min_rider_count": 0,
							"max_rider_count": 1,
							"rotate_rider_by": 0
						}
					]
				},
				"minecraft:input_ground_controlled": {},
				"minecraft:can_power_jump": {},
				"minecraft:is_saddled": {},
				"minecraft:is_tamed": {}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:timer": {
					"looping": true,
					"time": [
						4,
						8
					],
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					},
					"randomInterval": true
				},
				"minecraft:angry": {
					"broadcast_anger": true,
					"broadcast_range": 8,
					"duration": 24,
					"broadcast_targets": [
						"wasp"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				}
			},
			// 淡化退场
			"entity_module:downplay": {
				"minecraft:flying_speed": {
					"value": 0.0
				},
				"minecraft:scale_by_age": {
					"start_scale": 3,
					"end_scale": 0
				},
				"minecraft:damage_sensor": {
					"triggers": [
						{
							"cause": "all",
							"deals_damage": false
						}
					]
				},
				"minecraft:ageable": {
					"duration": 1,
					"grow_up": {
						"event": "entity_event:delete",
						"target": "self"
					}
				}
			},
			// 实体销毁
			"entity_module:despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				},
				"minecraft:scale": {
					"value": 0
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"monster",
					"flyer",
					"abyss",
					"wasp"
				]
			},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 0.5
			},
			"minecraft:health": {
				"value": 10
			},
			"minecraft:flying_speed": {
				"value": 0.3
			},
			"minecraft:underwater_movement": {
				"value": 0.35
			},
			"minecraft:scale": {
				"value": 3
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 15 : 1"
			},
			"minecraft:loot": {
				"table": "loot_tables/wasp/routine.json"
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true,
				"always_show": true
			},
			"minecraft:fire_immune": true,
			"minecraft:body_rotation_blocked": {},
			"minecraft:body_rotation_axis_aligned": {},
			// 事件触发器
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			"minecraft:tameable": {
				"probability": 0.45,
				"tame_items": [
					"starry_map:steel_rock_eutectic",
					"starry_map:coil.steel_rock_eutectic",
					"starry_map:wafer.steel_rock_eutectic"
				],
				"tame_event": {
					"event": "entity_event:create_contract_before",
					"target": "self"
				}
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"all_of": [
								{
									"test": "has_component",
									"value": "minecraft:angry"
								},
								{
									"test": "in_water",
									"operator": "==",
									"value": true
								}
							]
						},
						"cause": "drowning",
						"damage_per_tick": 5
					}
				]
			},
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": false,
				"is_pushable": false
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": false
			},
			// 行为控制
			"minecraft:behavior.avoid_mob_type": {
				"priority": 9,
				"entity_types": [
					{
						"filters": {
							"test": "is_target",
							"subject": "other",
							"value": true
						},
						"max_flee": 8
					}
				]
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:navigation.hover": {
				"can_path_from_air": true,
				"is_amphibious": false,
				"can_swim": true,
				"can_sink": true
			}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:patrol"
					]
				}
			},
			// 实体契约事件
			"entity_event:create_contract_before": {
				"queue_command": {
					"command": [
						"opal:entity_contract_rite"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:patrol"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:controlled"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"queue_command": {
					"command": [
						"opal:wild_bee_attack @s support"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:wild_bee_attack @s support"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"remove": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体淡化退场事件
			"entity_event:downplay": {
				"queue_command": {
					"command": [
						"particle constant:the_cracks_of_the_misty_sea ~~~"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:downplay"
					]
				}
			},
			// 实体销毁事件
			"entity_event:delete": {
				"queue_command": {
					"command": [
						"particle minecraft:knockback_roar_particle ~~~"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:despawn"
					]
				}
			}
		}
	}
}