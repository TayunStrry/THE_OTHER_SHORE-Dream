{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:guide.amber",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"properties": {
				"property:voice_interval": {
					"range": [
						0,
						999
					],
					"type": "int",
					"default": "math.random_integer(30.0, 180.0)"
				}
			},
			"scripts": {
				"animate": [
					"control_idle_state"
				]
			},
			"animations": {
				"control_idle_state": "controller.animation.server.during_leisure_time"
			}
		},
		"component_groups": {
			// 空闲状态
			"entity_module:leisure_state": {
				"minecraft:variant": {
					"value": 0
				}
			},
			// 发动攻击前
			"entity_module:attack_before": {
				"minecraft:ageable": {
					"duration": 1,
					"grow_up": {
						"event": "entity_event:attack_prepare",
						"target": "self"
					}
				}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				// 实体属性
				"minecraft:buoyant": {
					"base_buoyancy": 1,
					"apply_gravity": false,
					"simulate_waves": true,
					"liquid_blocks": [
						"minecraft:water",
						"minecraft:flowing_water"
					]
				},
				"minecraft:variant": {
					"value": 1
				},
				// 事件触发器
				"minecraft:angry": {
					"duration": 32,
					"broadcast_anger": true,
					"broadcast_range": 8,
					"broadcast_targets": [
						"abyss"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				},
				"minecraft:timer": {
					"time": 4,
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"contract_immunity",
					"GuardBox",
					"monster",
					"abyss"
				]
			},
			"minecraft:collision_box": {
				"width": 0.75,
				"height": 2.15
			},
			"minecraft:health": {
				"value": 200
			},
			"minecraft:scale": {
				"value": 0.9
			},
			"minecraft:movement": {
				"value": 0.35
			},
			"minecraft:underwater_movement": {
				"value": 0.15
			},
			"minecraft:experience_reward": {
				"on_death": "q.last_hit_by_player ? 30 : 5"
			},
			"minecraft:loot": {
				"table": "loot_tables/role_death/amber.json"
			},
			"minecraft:boss": {
				"name": "entity.starry_map:guide.amber.name",
				"hud_range": 16
			},
			"minecraft:variable_max_auto_step": {
				"jump_prevented_value": 2.5,
				"controlled_value": 3,
				"base_value": 2.0
			},
			"minecraft:fire_immune": true,
			"minecraft:nameable": {},
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": false,
				"is_pushable": false
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			// 事件触发器
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"on_damage": {
							"filters": {
								"test": "is_family",
								"operator": "!=",
								"subject": "damager",
								"value": "player"
							}
						},
						"damage_multiplier": 0.25
					}
				]
			},
			"minecraft:leashable": {
				"soft_distance": 5,
				"max_distance": 15,
				"hard_distance": 10,
				"on_leash": {
					"event": "minecraft:on_leash",
					"target": "self"
				},
				"on_unleash": {
					"event": "minecraft:on_unleash",
					"target": "self"
				}
			},
			// 行为控制
			"minecraft:navigation.generic": {
				// 常规移动
				"avoid_damage_blocks": true,
				"can_walk": true,
				// 开门
				"can_open_iron_doors": true,
				"can_pass_doors": true,
				"can_open_doors": true,
				// 在流体中行动
				"can_path_over_water": true,
				"can_path_over_lava": true,
				"is_amphibious": true,
				"can_sink": true,
				"can_swim": true
			},
			"minecraft:behavior.follow_mob": {
				"priority": 0,
				"filters": {
					"test": "is_family",
					"subject": "other",
					"value": "divine_favor_guide.jasmine"
				},
				"speed_multiplier": 1,
				"stop_distance": 3,
				"search_range": 32
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 0,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "starry"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "warden"
								},
								{
									"all_of": [
										{
											"test": "is_family",
											"operator": "==",
											"subject": "other",
											"value": "monster"
										},
										{
											"test": "is_family",
											"operator": "!=",
											"subject": "other",
											"value": "abyss"
										}
									]
								}
							]
						},
						"within_default": 64
					}
				],
				"must_reach": true,
				"must_see": true
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 1
			},
			"minecraft:behavior.random_stroll": {
				"priority": 5,
				"speed_multiplier": 1
			},
			"minecraft:behavior.random_look_around": {
				"priority": 6
			},
			"minecraft:annotation.open_door": {},
			"minecraft:movement.basic": {},
			"minecraft:is_stackable": {},
			"minecraft:can_climb": {},
			// 带宽优化
			"minecraft:conditional_bandwidth_optimization": {
				"conditional_values": {
					"max_dropped_ticks": 20,
					"max_optimized_distance": 200,
					"use_motion_prediction_hints": true
				},
				"default_values": {
					"max_dropped_ticks": 10,
					"max_optimized_distance": 100,
					"use_motion_prediction_hints": true
				}
			}
		},
		"events": {
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"add": {
					"component_groups": [
						"entity_module:attack_before"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:leisure_state"
					]
				}
			},
			// 实体攻击准备事件
			"entity_event:attack_prepare": {
				"remove": {
					"component_groups": [
						"entity_module:attack_before"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				},
				"queue_command": {
					"command": [
						"effect @s slowness 5 255 true",
						"opal:voice_management_system @s 战斗"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:divine_favor_attack @s windnews"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"add": {
					"component_groups": [
						"entity_module:leisure_state"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:angry_after",
						"entity_module:attack_before"
					]
				}
			}
		}
	}
}