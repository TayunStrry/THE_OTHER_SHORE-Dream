{
	"format_version": "1.21.10",
	"minecraft:entity": {
		"description": {
			"identifier": "starry_map:guide.windnews",
			"is_experimental": false,
			"is_summonable": true,
			"is_spawnable": true,
			"properties": {
				"property:voice_interval": {
					"range": [
						0,
						999
					],
					"type": "int",
					"default": "math.random_integer(30.0, 180.0)"
				}
			},
			"scripts": {
				"animate": [
					"control_idle_state"
				]
			},
			"animations": {
				"control_idle_state": "controller.animation.server.during_leisure_time"
			}
		},
		"component_groups": {
			// 签订契约之前
			"entity_module:contract_before": {
				"minecraft:behavior.tempt": {
					"speed_multiplier": 1,
					"priority": 1,
					"items": [
						"starry_map:magic_crystal_screwdriver",
						"starry_map:faerie_contract",
						"starry_map:magic_crystal_marbles",
						"starry_map:magic_crystal_shield",
						"starry_map:magic_crystal_wrench",
						"starry_map:magic_crystal_claw",
						"starry_map:magic_crystal_bow",
						"starry_map:magic_crystal_key"
					]
				},
				"minecraft:behavior.trade_interest": {
					"priority": 3,
					"cooldown": 8.0,
					"within_radius": 5.0,
					"interest_time": 45.0,
					"remove_item_time": 3.0,
					"carried_item_switch_time": 3.0
				},
				"minecraft:economy_trade_table": {
					"display_name": "§5风信之歌§r",
					"table": "trading/windnews.json",
					"new_screen": true
				}
			},
			// 空闲状态
			"entity_module:leisure_state": {
				"minecraft:variant": {
					"value": 0
				}
			},
			// 发动攻击后
			"entity_module:angry_after": {
				"minecraft:variant": {
					"value": 1
				},
				"minecraft:timer": {
					"time": 2,
					"time_down_event": {
						"event": "entity_event:attack_execute",
						"target": "self"
					}
				},
				"minecraft:angry": {
					"duration": 24,
					"broadcast_anger": true,
					"broadcast_range": 32,
					"broadcast_targets": [
						"starry"
					],
					"broadcast_filters": {
						"test": "is_visible",
						"subject": "other",
						"value": true
					},
					"filters": {
						"test": "is_visible",
						"subject": "target",
						"value": true
					},
					"calm_event": {
						"event": "entity_event:attack_done",
						"target": "self"
					}
				}
			},
			// 发动攻击前
			"entity_module:attack_before": {
				"minecraft:variant": {
					"value": 1
				},
				"minecraft:ageable": {
					"duration": 2,
					"grow_up": {
						"event": "entity_event:attack_front",
						"target": "self"
					}
				}
			},
			// 在陆地上
			"entity_module:on_ground": {
				"minecraft:behavior.random_stroll": {
					"speed_multiplier": 1,
					"priority": 30
				}
			},
			// 在水中
			"entity_module:on_water": {
				"minecraft:behavior.random_swim": {
					"priority": 30
				},
				"minecraft:behavior.swim_wander": {
					"priority": 25
				},
				"minecraft:behavior.swim_idle": {
					"priority": 35
				}
			}
		},
		"components": {
			// 基础属性
			"minecraft:type_family": {
				"family": [
					"contract_immunity",
					"ocean_map",
					"starry"
				]
			},
			"minecraft:collision_box": {
				"width": 0.75,
				"height": 2
			},
			"minecraft:scale": {
				"value": 0.75
			},
			"minecraft:health": {
				"value": 500
			},
			"minecraft:movement": {
				"value": 0.3
			},
			"minecraft:underwater_movement": {
				"value": 0.15
			},
			"minecraft:breathable": {
				"generates_bubbles": true,
				"breathes_solids": true,
				"breathes_water": true,
				"breathes_lava": true,
				"breathes_air": true,
				"suffocate_time": 10,
				"total_supply": 15,
				"inhale_time": 0
			},
			"minecraft:variable_max_auto_step": {
				"jump_prevented_value": 2.5,
				"controlled_value": 3,
				"base_value": 2.0
			},
			"minecraft:loot": {
				"table": "loot_tables/role_death/windnews.json"
			},
			"minecraft:nameable": {},
			"minecraft:persistent": {},
			"minecraft:fire_immune": true,
			// 物理属性
			"minecraft:pushable": {
				"is_pushable_by_piston": true,
				"is_pushable": true
			},
			"minecraft:physics": {
				"push_towards_closest_space": true,
				"has_collision": true,
				"has_gravity": true
			},
			//事件触发器
			"minecraft:environment_sensor": {
				"triggers": [
					{
						"filters": {
							"all_of": [
								{
									"test": "has_tag",
									"operator": "!=",
									"value": "on_water"
								},
								{
									"test": "in_water",
									"operator": "==",
									"value": true
								}
							]
						},
						"event": "entity_event:on_water"
					},
					{
						"filters": {
							"all_of": [
								{
									"test": "has_tag",
									"value": "on_water"
								},
								{
									"test": "in_water",
									"operator": "!=",
									"value": true
								}
							]
						},
						"event": "entity_event:on_ground"
					}
				]
			},
			"minecraft:on_target_acquired": {
				"event": "entity_event:attack_point",
				"target": "self"
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"on_damage": {
							"filters": {
								"any_of": [
									{
										"test": "has_equipment",
										"value": "starry_map:magic_crystal_shield"
									},
									{
										"test": "has_equipment",
										"value": "shield"
									}
								]
							}
						},
						"deals_damage": false
					},
					{
						"cause": "fall",
						"deals_damage": false
					}
				]
			},
			// 行为控制
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 10,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "abyss"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "monster"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "warden"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "hoglin"
								}
							]
						},
						"within_default": 32
					}
				],
				"must_reach": true,
				"must_see": true
			},
			"minecraft:behavior.restrict_open_door": {
				"priority": 15
			},
			"minecraft:behavior.random_look_around": {
				"priority": 18
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 12
			},
			"minecraft:behavior.look_at_player": {
				"probability": 0.02,
				"look_distance": 3,
				"priority": 17
			},
			"minecraft:behavior.open_door": {
				"close_door_after": true,
				"priority": 16
			},
			"minecraft:navigation.generic": {
				// 常规移动
				"avoid_damage_blocks": true,
				"can_walk": true,
				// 开门
				"can_open_iron_doors": true,
				"can_pass_doors": true,
				"can_open_doors": true,
				// 在流体中行动
				"can_path_over_water": true,
				"can_path_over_lava": true,
				"is_amphibious": true,
				"can_sink": true,
				"can_swim": true
			},
			"minecraft:annotation.open_door": {},
			"minecraft:movement.generic": {},
			"minecraft:can_climb": {},
			// 带宽优化
			"minecraft:conditional_bandwidth_optimization": {
				"conditional_values": {
					"max_dropped_ticks": 20,
					"max_optimized_distance": 200,
					"use_motion_prediction_hints": true
				},
				"default_values": {
					"max_dropped_ticks": 10,
					"max_optimized_distance": 100,
					"use_motion_prediction_hints": true
				}
			}
		},
		"events": {
			// 实体诞生事件
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"entity_module:contract_before",
						"entity_module:on_ground"
					]
				}
			},
			// 实体进入水体事件
			"entity_event:on_water": {
				"queue_command": {
					"command": [
						"tag @s add on_water"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:on_water"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:on_ground"
					]
				}
			},
			// 实体离开水体事件
			"entity_event:on_ground": {
				"queue_command": {
					"command": [
						"tag @s remove on_water"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:on_ground"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:on_water"
					]
				}
			},
			// 实体攻击瞄准事件
			"entity_event:attack_point": {
				"queue_command": {
					"command": [
						"effect @s slowness 5 255 true",
						"opal:voice_management_system @s 战斗"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:attack_before"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:leisure_state"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_execute": {
				"queue_command": {
					"command": [
						"opal:divine_favor_attack @s windnews"
					]
				}
			},
			// 实体攻击执行事件
			"entity_event:attack_front": {
				"remove": {
					"component_groups": [
						"entity_module:attack_before"
					]
				},
				"add": {
					"component_groups": [
						"entity_module:angry_after"
					]
				}
			},
			// 实体攻击结束事件
			"entity_event:attack_done": {
				"add": {
					"component_groups": [
						"entity_module:leisure_state"
					]
				},
				"remove": {
					"component_groups": [
						"entity_module:angry_after",
						"entity_module:attack_before"
					]
				}
			}
		}
	}
}