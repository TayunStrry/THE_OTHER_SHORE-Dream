{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "scripts:spray_extend_ripple",
            "basic_render_parameters": {
                "material": "particles_blend",
                "texture": "textures/粒子贴图/基础纹理"
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                // variable.property[setSpeedAndDirection] -> 粒子属性
                // speed -> 尺寸大小, 取值范围(1, 2, 3)
                // direction_x -> 方向x, 取值范围(-1, 1)
                // direction_y -> 方向y, 取值范围(-1, 1)
                // direction_z -> 方向z, 取值范围(-1, 1)
                "creation_expression": "variable.property; variable.radius = (v.property.speed == 1 ? math.random(0.5, 1) : (v.property.speed == 2 ? Math.random(0.4, 0.8) : Math.random(0.2, 0.4)));"
            },
            "minecraft:emitter_rate_instant": {
                "num_particles": "v.property.speed == 1 ? Math.random(5, 10) : (v.property.speed == 2 ? Math.random(4, 8) : Math.random(3, 6))"
            },
            "minecraft:emitter_shape_box": {
                "half_dimensions": [
                    "v.property.speed == 1 ? variable.radius * 8.0 : (v.property.speed == 2 ? variable.radius * 4.0 : variable.radius * 3.0)",
                    0.1,
                    "v.property.speed == 1 ? variable.radius * 8.0 : (v.property.speed == 2 ? variable.radius * 4.0 : variable.radius * 3.0)"
                ],
                "direction": [
                    "v.property.speed == 1 ? math.random(-3, 3) : (v.property.speed == 2 ? math.random(-2, 2) : math.random(-1, 1))",
                    0,
                    "v.property.speed == 1 ? math.random(-3, 3) : (v.property.speed == 2 ? math.random(-2, 2) : math.random(-1, 1))"
                ]
            },
            "minecraft:particle_initial_spin": {
                "rotation": "math.random(-45, 45)"
            },
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": 0.35
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "variable.radius",
                    "variable.radius"
                ],
                "facing_camera_mode": "direction_z",
                "direction": {
                    "mode": "custom",
                    "custom_direction": [
                        0,
                        1,
                        0
                    ]
                },
                "uv": {
                    "texture_width": 256,
                    "texture_height": 256,
                    "flipbook": {
                        "base_UV": [
                            131,
                            200
                        ],
                        "size_UV": [
                            24,
                            24
                        ],
                        "step_UV": [
                            25,
                            0
                        ],
                        "stretch_to_lifetime": true,
                        "frames_per_second": 5,
                        "max_frame": 5,
                        "loop": false
                    }
                }
            },
            "minecraft:particle_expire_if_not_in_blocks": [
                "minecraft:air"
            ],
            "minecraft:emitter_lifetime_once": {},
            "minecraft:particle_appearance_lighting": {}
        }
    }
}