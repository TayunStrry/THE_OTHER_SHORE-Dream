{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "scripts:spray_splash",
            "basic_render_parameters": {
                "material": "particles_blend",
                "texture": "textures/particle/particles"
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                // variable.property[setSpeedAndDirection] -> 粒子属性
                // speed -> 尺寸大小, 取值范围(1, 2, 3)
                // direction_x -> 方向x, 取值范围(-1, 1)
                // direction_y -> 方向y, 取值范围(-1, 1)
                // direction_z -> 方向z, 取值范围(-1, 1)
                "creation_expression": "variable.property; variable.radius = (v.property.speed == 1 ? Math.random(0.05, 0.1) : (v.property.speed == 2 ? Math.random(0.05, 0.075) : Math.random(0.025, 0.05)));"
            },
            "minecraft:emitter_rate_instant": {
                "num_particles": "v.property.speed == 1 ? 45 : (v.property.speed == 2 ? 30 : 15)"
            },
            "minecraft:particle_initial_speed": [
                "v.property.speed == 1 ? 3 * Math.random(-1.5, 1.5) : (v.property.speed == 2 ? 2 * Math.random(-1.5, 1.5) : 2 * Math.random(-1.0, 1.0))",
                "v.property.speed == 1 ? 6 * Math.random( 2.0, 2.5) : (v.property.speed == 2 ? 6 * Math.random( 1.5, 2.0) : 6 * Math.random( 1.0, 2.0))",
                "v.property.speed == 1 ? 3 * Math.random(-1.5, 1.5) : (v.property.speed == 2 ? 2 * Math.random(-1.5, 1.5) : 2 * Math.random(-1.0, 1.0))"
            ],
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": "Math.Random(0.5, 2.0)"
            },
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [
                    0,
                    "math.random(-15, -35)",
                    0
                ],
                "linear_drag_coefficient": 0.5
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "v.radius",
                    "v.radius"
                ],
                "facing_camera_mode": "lookat_xyz",
                "uv": {
                    "texture_height": 128,
                    "texture_width": 128,
                    "uv": [
                        32,
                        88
                    ],
                    "uv_size": [
                        8,
                        8
                    ]
                }
            },
            "minecraft:emitter_lifetime_once": {},
            "minecraft:emitter_shape_point": {}
        }
    }
}