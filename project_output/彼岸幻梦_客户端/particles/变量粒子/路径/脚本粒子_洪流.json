{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "scripts:path_spurt",
            "basic_render_parameters": {
                "material": "particles_alpha",
                "texture": "textures/粒子贴图/基础纹理"
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                // variable.range:[setFloat] -> 粒子运行的极限距离
                // variable.direction:[setVector3] -> 粒子运行的矢量方向
                // variable.type:[setFloat] -> 粒子特效的类型, 参数范围(0, 1, 2)
                "creation_expression": "v.space = 0; v.count.x = 0; v.count.y = 0; v.count.z = 0;",
                "per_update_expression": "v.space = v.space + 1; v.count.x = v.count.x + v.direction.x; v.count.y = v.count.y + v.direction.y; v.count.z = v.count.z + v.direction.z;"
            },
            "minecraft:emitter_rate_steady": {
                "spawn_rate": 100,
                "max_particles": 1000
            },
            "minecraft:emitter_lifetime_looping": {
                "active_time": 1
            },
            "minecraft:emitter_shape_point": {
                "offset": [
                    "v.type == 0 ? 0 : v.count.x",
                    "v.type == 0 ? 0 : v.count.y",
                    "v.type == 0 ? 0 : v.count.z"
                ]
            },
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [
                    "v.type == 0 ? v.count.x : v.type == 1 ? -v.count.x : 0",
                    "v.type == 0 ? v.count.y : v.type == 1 ? -v.count.y : 0",
                    "v.type == 0 ? v.count.z : v.type == 1 ? -v.count.z : 0"
                ]
            },
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": "v.range",
                "expiration_expression": "v.space >= v.range * 40"
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "v.particle_random_1 * v.particle_random_2 * 0.6 + 0.1",
                    "v.particle_random_1 * v.particle_random_2 * 0.6 + 0.1"
                ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 256,
                    "texture_height": 256,
                    "flipbook": {
                        "base_UV": [
                            131,
                            26
                        ],
                        "size_UV": [
                            24,
                            24
                        ],
                        "step_UV": [
                            25,
                            0
                        ],
                        "stretch_to_lifetime": false,
                        "frames_per_second": 15,
                        "max_frame": 5,
                        "loop": true
                    }
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": [
                    "v.color.r",
                    "v.color.g",
                    "v.color.b",
                    "v.particle_age > (v.particle_lifetime / Math.random(2.0, 1.0)) ? 0.45 : 1.00"
                ]
            },
            //"minecraft:particle_expire_if_not_in_blocks": [ "minecraft:air" ],
            /*
            "minecraft:particle_kill_plane": [
                0,
                -1,
                0,
                -5
            ],
            */
            "minecraft:particle_initial_speed": 1
        }
    }
}