{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "scripts:path_heart",
            "basic_render_parameters": {
                "material": "particles_alpha",
                "texture": "textures/particle/particles"
            }
        },
        "curves": {
            "variable.colour": {
                "type": "catmull_rom",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [
                    0,
                    1,
                    0,
                    1
                ]
            },
            "variable.scale": {
                "type": "catmull_rom",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [
                    0.5,
                    1.0,
                    0.5,
                    1.0
                ]
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                // variable.direction:[setFloat] -> 粒子运行的旋转轴, 参数范围(0, 1, 2)
                // variable.size:[setFloat] -> 粒子图形的缩放系数
                "creation_expression": "variable.speed = 360.0;",
                "per_update_expression": "v.cos = ((13 * math.cos(v.emitter_age * v.speed) - 5 * math.cos(2 * v.emitter_age * v.speed) - 2 * math.cos(3 * v.emitter_age * v.speed) - math.cos(4 * v.emitter_age * v.speed)) / 7) * (v.size / 4); v.sin = ((16 * math.pow(math.sin(v.emitter_age * v.speed), 3)) / 7) * (v.size / 4);"
            },
            "minecraft:emitter_rate_steady": {
                "spawn_rate": 100,
                "max_particles": 1000
            },
            "minecraft:emitter_lifetime_looping": {
                "active_time": 4
            },
            "minecraft:emitter_shape_point": {
                "offset": [
                    "(v.direction == 0) ? v.sin : (v.direction == 1) ? 0 : v.sin",
                    "(v.direction == 0) ? v.cos : (v.direction == 1) ? v.sin : 0",
                    "(v.direction == 0) ? 0 : (v.direction == 1) ? v.cos : v.cos"
                ]
            },
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": 1
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "0.15 * v.scale",
                    "0.15 * v.scale"
                ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 128,
                    "texture_height": 128,
                    "uv": [
                        32,
                        88
                    ],
                    "uv_size": [
                        8,
                        8
                    ]
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "v.colour",
                    "gradient": {
						"0.0": "#801CC9D7",
						"0.24": "#800092FF",
						"1.0": "#80E211C4"
                    }
                }
            },
            "minecraft:particle_initial_speed": 0,
            "minecraft:particle_motion_dynamic": {}
        }
    }
}