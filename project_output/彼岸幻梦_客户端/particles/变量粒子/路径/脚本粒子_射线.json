{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "scripts:path_ray",
            "basic_render_parameters": {
                "material": "particles_alpha",
                "texture": "textures/particle/particles"
            }
        },
        "curves": {
            "variable.colour": {
                "type": "catmull_rom",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [
                    0,
                    1,
                    0,
                    1
                ]
            },
            "variable.scale": {
                "type": "catmull_rom",
                "input": "v.particle_age",
                "horizontal_range": "v.particle_lifetime",
                "nodes": [
                    0.5,
                    1.0,
                    0.5,
                    1.0
                ]
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                // variable.direction:[setVector3] -> 粒子运行的矢量方向
                // variable.type:[setFloat] -> 粒子特效的类型, 参数范围(0, 1, 2)
                "creation_expression": "variable.count.x = 0; variable.count.y = 0; variable.count.z = 0;",
                "per_update_expression": "v.count.x = v.count.x + v.direction.x; v.count.y = v.count.y + v.direction.y; v.count.z = v.count.z + v.direction.z;"
            },
            "minecraft:emitter_rate_steady": {
                "spawn_rate": 100,
                "max_particles": 1000
            },
            "minecraft:emitter_lifetime_looping": {
                "active_time": 4
            },
            "minecraft:emitter_shape_point": {
                "offset": [
                    "v.type == 0 ? 0 : v.count.x",
                    "v.type == 0 ? 0 : v.count.y",
                    "v.type == 0 ? 0 : v.count.z"
                ]
            },
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [
                    "v.type == 0 ? v.count.x : v.type == 1 ? -v.count.x : 0",
                    "v.type == 0 ? v.count.y : v.type == 1 ? -v.count.y : 0",
                    "v.type == 0 ? v.count.z : v.type == 1 ? -v.count.z : 0"
                ]
            },
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": 1.5
            },
            "minecraft:particle_appearance_billboard": {
                "size": [
                    "0.15 * v.scale",
                    "0.15 * v.scale"
                ],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 128,
                    "texture_height": 128,
                    "uv": [
                        32,
                        88
                    ],
                    "uv_size": [
                        8,
                        8
                    ]
                }
            },
            "minecraft:particle_appearance_tinting": {
                "color": {
                    "interpolant": "v.colour",
                    "gradient": {
						"0.0": "#801CC9D7",
						"0.24": "#800092FF",
						"1.0": "#80E211C4"
                    }
                }
            },
            //"minecraft:particle_expire_if_not_in_blocks": [ "minecraft:air" ],
            "minecraft:particle_initial_speed": 1
        }
    }
}