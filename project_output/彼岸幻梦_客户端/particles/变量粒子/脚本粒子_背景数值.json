{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "scripts:setting.number_display",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/粒子贴图/数值显示-背景"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				// variable.property[setVector3] -> 粒子属性
				// x -> 显示值
				// y -> 状态位(个十百千万)
				// z -> 缩放大小
				// variable.offset[setVector3] -> 显示偏移
				// variable.color[setColorRGB] -> 粒子颜色
				"creation_expression": "variable.property; variable.offset; variable.color;"
			},
			"minecraft:emitter_rate_manual": {
				"max_particles": 1
			},
			"minecraft:emitter_shape_point": {
				"offset": [
					"v.offset.x",
					"v.offset.y",
					"v.offset.z"
				]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "v.property.z"
			},
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [
					0,
					"v.offset.y",
					0
				]
			},
			"minecraft:particle_appearance_billboard": {
				"size": [
					"v.property.z",
					"v.property.z"
				],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 491,
					"texture_height": 246,
					"uv": [
						"v.property.x * 49",
						"v.property.y * 49"
					],
					"uv_size": [
						50,
						50
					]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": [
					"v.color.r",
					"v.color.g",
					"v.color.b",
					1
				]
			},
			"minecraft:particle_initial_speed": 0.0,
			"minecraft:emitter_lifetime_once": {}
		}
	}
}