{
	"format_version": "1.8.0",
	"animations": {
		"animation.item.magic_crystal_shield": {
			"loop": true,
			"bones": {
				"icon": {
					"rotation": [
						0,
						0,
						"v.cooldown ? (math.cos(q.life_time * 360) * 15) : 0"
					],
					"position": [
						"v.is_enchanted ? 1 : 0",
						"v.is_enchanted ? math.cos(q.life_time * 360) + 0.5 : 0",
						"v.is_enchanted ? 1 : 0"
					],
					"scale": "c.is_first_person && !q.is_in_water && !q.is_riding ? (v.is_enchanted ? 1.25 : 1) : 0"
				},
				"item": {
					"rotation": [
						0,
						"q.is_sneaking ? (c.item_slot == 'main_hand' ? -75 : -95) : (c.item_slot == 'main_hand' ? 0 : 180)",
						0
					],
					"position": [
						"q.is_sneaking ? (c.item_slot == 'main_hand' ? 5 : 5) : (c.item_slot == 'main_hand' ? 0 : 8)",
						0,
						"q.is_sneaking ? -8 : 0"
					],
					"scale": "c.is_first_person ? 0 : 1"
				}
			}
		},
		"animation.item.magic_crystal_marbles": {
			"loop": true,
			"animation_length": 2,
			"bones": {
				"item": {
					"rotation": [
						"q.life_time * 75",
						0,
						"q.life_time * 75"
					],
					"position": [
						"c.is_first_person ? -8 : 0",
						0,
						"c.is_first_person ? -3 : (math.cos(q.life_time * 50) * 1.5) - 3"
					],
					"scale": "q.is_sneaking ? 0 : 0.35"
				},
				"sight": {
					"rotation": [
						0,
						0,
						"q.is_sneaking ? (q.life_time * 75) : 0"
					],
					"scale": "c.is_first_person && !q.is_riding ? (q.is_sneaking ? 1 : 0.75) : 0"
				},
				"sneaking": {
					"rotation": [
						"q.life_time * 75",
						0,
						"q.life_time * 75"
					],
					"position": [
						0,
						0,
						"c.is_first_person ? ((math.cos(q.life_time * 50) * 1.5) + 10) : (math.cos(q.life_time * 50) * 1.5) - 3"
					],
					"scale": "c.is_first_person ? 0 : (!q.is_sneaking ? 0 : 0.35)"
				}
			}
		}
	}
}